<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.blog.mapper.UserMapper">

    <select id="findUserByUsername" resultType="com.atguigu.blog.pojos.User">
        SELECT uid,username,password,phone,introduction,create_time,update_time FROM user WHERE username=#{username}
    </select>

    <select id="findUserByUid" resultType="com.atguigu.blog.pojos.User">
        SELECT uid,username,password,phone,introduction FROM  user WHERE  uid =#{uid}
    </select>

    <update id="updateUser" >
            UPDATE  user
        <set>
            <if test="username !=null and username !=''">
                username=#{username},
            </if>
            <if test="password !=null and password !=''">
                password = #{password},
            </if>
            <if test="phone !=null and phone !=''">
                phone = #{phone},
            </if>
            <if test="introduction !=null and introduction !='' ">
                introduction =#{introduction},
            </if>
            update_time=NOW()
        </set>
        WHERE uid = #{uid}
    </update>
</mapper>
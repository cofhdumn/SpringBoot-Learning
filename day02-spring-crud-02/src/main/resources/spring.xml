<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        https://www.springframework.org/schema/context/spring-context.xsd">


    <bean class="com.atguigu.controller.UserController" id="userController">
        <!--调用set方法进行注入-->
        <property name="userService" ref="userService"></property>
    </bean>

    <!--
          哪些对象需要放到IOC容器中?
          UserServiceImpl、UserDaoImpl、UserController、QueryRunner、DataSource
      -->

    <bean class="com.atguigu.service.impl.UserServiceImpl" id="userService">
        <!--调用set方法进行注入-->
        <property name="userDao" ref="userDao"></property>
    </bean>

    <!--    <bean class="com.atguigu.dao.impl"></bean>-->

    <bean class="com.atguigu.dao.impl.UserDaoImpl" id="userDao">
        <property name="queryRunner" ref="queryRunner"></property>
    </bean>

    <bean class="org.apache.commons.dbutils.QueryRunner" id="queryRunner">
        <!--使用构造器方式注入-->
        <!--
         public QueryRunner(DataSource ds) {
                super(ds);}
                QueryRunner对象需要 传入dataSource ，它定义的形参是ds
        -->
        <constructor-arg name="ds" ref="dataSource"></constructor-arg>
    </bean>


    <!--引入外部的properties文件-->

    <context:property-placeholder location="classpath:jdbc.properties"></context:property-placeholder>


    <bean class="com.alibaba.druid.pool.DruidDataSource" id="dataSource">

        <property name="username" value="${datasource.username}"></property>
        <property name="driverClassName" value="${datasource.driverClassName}"></property>
        <property name="password" value="${datasource.password}"></property>
        <property name="url" value="${datasource.url}"></property>
    </bean>

</beans>